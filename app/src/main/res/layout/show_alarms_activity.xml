<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our course name-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <!--text view for our course duration-->

            <!--text view for our course tracks-->

        </LinearLayout>

        <!--text view for our course description-->


        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#C6C6C6"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DATE"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/description"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="286dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Description"
                android:textColor="@color/black" />

            <Switch
                android:id="@+id/simpleSwitch"
                android:layout_width="107dp"
                android:layout_height="286dp"
                android:layout_centerHorizontal="true" /> <!--displayed text of switch-->


            <ImageView
                android:id="@+id/bin1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/bin" />


            <TextView
                android:id="@+id/minutes"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="3dp"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idanwkatw"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="3dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>